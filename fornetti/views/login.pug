extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Login via site
          .panel-body
            form(accept-charset='UTF-8', role='form', method='post')
              fieldset
                .form-group
                  input.form-control(placeholder='yourmail@example.com', name='email', type='text')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    |  Remember Me
                input.btn.btn-lg.btn-success.btn-block(type='submit', value='Login')
            hr
            center
              h4 OR
            input.btn.btn-lg.btn-facebook.btn-block(type='submit', value='Login via facebook')
